[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.rst]
max_line_length = 100

[*.py]
max_line_length = 100

[*.{kt,kts}]
max_line_length=100
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_filename = disabled
